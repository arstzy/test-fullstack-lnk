{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts", 
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
